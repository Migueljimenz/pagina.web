          <%= simple_form_for @car do |f| %>
            <%=f.input :id, readonly: true  %>  
            <%= f.input :modelo,readonly: true %>
            <%= f.input :placa,readonly: true%>
            <%= f.input :color,readonly: true%>
          <% end %>
