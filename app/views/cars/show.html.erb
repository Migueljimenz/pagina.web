<main class="container" id="show">
  <div class="row">
    <aside class="container, col-md-4">
      <div class="list-group">
        <legend>Menu</legend>
        <%= link_to "Home", root_path, :method => :get, class: "list-group-item"
        %> <%= link_to "lista de carros", cars_path,:method => :get, class:
        "list-group-item" %>
        <a href="#" class="list-group-item active">Info de carro</a>
        <a href="#" class="list-group-item">Porta ac consectetur ac</a>
        <a href="#" class="list-group-item">Vestibulum at eros</a>
